<!-- 可用组件：https://mp.weixin.qq.com/debug/wxadoc/dev/component/ -->
<view class="container">
  <!--分析师-->
  <view class="fxs-container">
    <view class="fxs">
      <!--上部-分析师信息-->
      <view class="fxs-top">
        <!--左侧图片-->
        <view class="fxs-t-left">
          <image src="{{ fxsInfo.img }}"></image>
        </view>
        <!--右侧分析师信息-->
        <view class="fxs-t-right color666">
          <view class="fxs-t-r-name">分析师：<text>{{ fxsInfo.name }}{{ index }} <text class="fxs-t-r-site">职位:</text> {{ fxsInfo.type }}</text></view>
          <view class="fxs-t-r-company">公司名：<text>{{ fxsInfo.company }}</text></view>
          <view class="fxs-t-r-style">风格：<text>{{ fxsInfo.style }}</text></view>
          <view class="fxs-t-r-rise">收益率：<text>{{ fxsInfo.rise }}</text> <text class="fxs-t-r-time">最近操作:<text>{{ fxsInfo.time }}</text></text> </view>
        </view>
      </view>
      <!--todo 确定分析师id-->
      <!--<view class="fxs-bottom">-->
        <!--<navigator url="../introduce/introduce?type=fxsid" open-type="navigate" class="show-more">详细介绍</navigator>-->
      <!--</view>-->
    </view>
  </view>
  <!--操作记录-->
  <view class="operation">
    <view class="operation-title">操作记录</view>
    <view class="info-container">
      <!-- todo 循环添加操作记录-->
      <view class="info" wx:for="{{ operation }}" wx:key="index">
        <view class='info-kind'>{{ item.kind }}</view>
        <view class='info-way'>{{ item.way }}</view>
        <view class='info-price'>{{ item.price }}</view>
        <view class='info-garbage'>{{ item.garbage }}</view>
      </view>
      <view bindtap="showMore" class="show-more color666">查看更多</view>
    </view>
  </view>
  <!--分析师介绍-->
  <view class="introduce">
    <text>{{ introduce }}</text>
  </view>
</view>
